function adv_index_rating_show() {
  var adv_id;
  var rating;
  var adv_rating_show_id;
  var adv_rating_value_id;
  var num_of_adv = $('#adventure-partial input').length / 2;

  var i = 0;

  for(; i < num_of_adv; i++) {
