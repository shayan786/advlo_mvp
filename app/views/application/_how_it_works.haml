#how_it_works

  .container
    %br
    %br
    .row
      .col-md-12
        .hiw_img{style: "background: url('#{asset_path("background/hiw_search.png")}') center center no-repeat"}
          .hiw_img_text.text-left
            .large Explore by destination or activity
            .hiw-small-left Search to view existing adventures or local hosts that interest you
            .explore_wrapper
              %a{href: '/find'}
                #hiw-btn.btn.btn-default 
                  START EXPLORING
      
      .col-md-12
        .hiw_img{style: "background: url('#{asset_path("background/hiw_find.jpg")}') center center no-repeat"}
          .hiw_img_text.text-right{style: "position: relative;"}
            .large Connect with local adventure hosts
            .hiw-small-right Find and connect with local adventure hosts to set up your next adventure
            .explore_wrapper
              %a{href: '/find'}
                #hiw-btn.btn.btn-default 
                  CONNECT WITH HOSTS

      .col-md-12
        .hiw_img{style: "background: url('#{asset_path("background/hiw_adventure.jpg")}') center center no-repeat"}
          .hiw_img_text.text-left
            .large Experience your custom adventure
            .hiw-small-left We'll handle the payment transfer and logistics, while you Adventure Local
            .explore_wrapper
              %a{href: '/find'}
                #hiw-btn.btn.btn-default 
                  REQUEST AN ADVENTURE
  
