        .question-wrapper
          %h4= @poll.name
          %a.question.btn.btn-primary.answer-1{href: '/update-poll/answer_1', 'data-remote' => 'true', 'data-text'=> "14 Days Kitesurfing in South Africa ( $799 )", "data-link" => "http://advlo.com/adventures?region=Asia", 'data-poll' => 'Asia', 'data-answer' => 'answer-1'}
