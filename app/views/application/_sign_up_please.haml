#signup-please-modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "signup-please-modal", role: "dialog"}
  .modal-dialog
    .modal-content
      %button.close#close-signup-modal
        %span Ã—
        %span.sr-only Close


      .modal-body.text-center
        .advlo_img
          = image_tag 'logos/advlo_header_logo_closed.png'
        .question-wrapper
          %h4 What kind of adventurer are you?
          %a.question.btn.btn-primary.answer-1{href: '/update-poll/answer_1', 'data-remote' => 'true', 'data-text'=> 'Looks like you are in the right place...', 'data-poll' => 'thrillseeker', 'data-answer' => 'answer-1'}
            %p Thrillseeker
          %a.question.btn.btn-success.answer-2{href: '/update-poll/answer_2', 'data-remote' => 'true', 'data-text'=> 'At Advlo we are all about cultural experiences...', 'data-poll' => 'culturalist', 'data-answer' => 'answer-2'}
            %p Culturalist
          %a.question.btn.btn-info.answer-3{href: '/update-poll/answer_3', 'data-remote' => 'true', 'data-text'=> "Its time we connected you with a local adventure...", 'data-poll' => 'vacationist', 'data-answer' => 'answer-3'}
            %p Vacationist



        .form-wrapper
          - total_answers = (@poll.answer_1 + @poll.answer_2 + @poll.answer_3).to_f
          .poll-answers{'data-total' => total_answers}
            .answer-1.btn.btn-primary.answer.disabled
              .poll-count= @poll.answer_1
            .answer-2.btn.btn-success.answer.disabled
              .poll-count= @poll.answer_2
            .answer-3.btn.btn-info.answer.disabled
              .poll-count= @poll.answer_3

          .row
            %a.btn.btn-primary.fb_btn{href: "/users/auth/facebook"}
              %i.fa.fa-facebook
              CONNECT WITH FACEBOOK

          %hr

          %form{"accept-charset" => "UTF-8", action: "/users", method: "post", roll: "form", id: 'signup_modal'}
            =tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token)
            .form-group
              %input.form-control{placeholder: "Email Address", type: "email", required: "required", name: "user[email]", id: "user_email"}
            .form-group
              %input.form-control{placeholder: "Password", type: "password", required: "required", autocomplete: "off", id: "user_password", name: "user[password]"}
            .form-group
              %input.form-control{placeholder: "Confirm Password", type: "password", required: "required", autocomplete: "off", id: "user_password_confirmation", name: "user[password_confirmation]"}
            .row
              %input.btn.btn-primary.sign_up_btn{name: "sign_up", type: "submit", value: "SIGN UP"}

          .row
            .btn.btn-success.sign_up_toggle_btn
              CONNECT WITH EMAIL

          #network
            %h4