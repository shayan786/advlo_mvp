:javascript
  $('#email_list').bootstrapValidator({
    fields: {
      '#email_list': {
        validators: {
          notEmpty: {
            mesage: "Email cannot be empty"
          },
          emailAddress: {
            message: 'Not a valid email address'
          }
        }
      }
    }
  })


  $('#email_list_button').click(function(e){
    e.preventDefault();
    $('#user_password_confirmation').val($('#user_password').val())
    $('#popup_join').submit();
  })