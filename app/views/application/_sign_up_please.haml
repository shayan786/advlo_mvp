#signup-please-modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "signup-please-modal", "data-backdrop" => "static", role: "dialog"}
  .modal-dialog
    .modal-content
      %button.close#close-signup-modal
        %span Ã—
        %span.sr-only Close


      .modal-body.text-center
        .advlo_img
          = image_tag 'logos/advlo_words_only.png'

        .question-wrapper
          %h4 What kind of adventurer are you?
          %a.question.btn.btn-primary.answer-1{href: '/update-poll/answer_1', 'data-remote' => 'true', 'data-text'=> "Get updates about epic adventure packages only on Advlo..", 'data-poll' => 'thrillseeker', 'data-answer' => 'answer-1'}
            %p Thrillseeker
          %a.question.btn.btn-info.answer-3{href: '/update-poll/answer_3', 'data-remote' => 'true', 'data-text'=> "Get updates about unique, family friendly adventures only on Advlo..", 'data-poll' => 'vacationist', 'data-answer' => 'answer-3'}
            %p Vacationist
          %a.question.btn.btn-success.answer-2{href: '/update-poll/answer_2', 'data-remote' => 'true', 'data-text'=> 'Get updates about cultural expedition adventures only on Advlo..', 'data-poll' => 'culturalist', 'data-answer' => 'answer-2'}
            %p Culturalist

        .form-wrapper
          - total_answers = (@poll.answer_1 + @poll.answer_2 + @poll.answer_3).to_f
          .poll-answers{'data-total' => total_answers}
            .answer-1.btn.btn-primary.answer
              .poll-count= @poll.answer_1

            .answer-2.btn.btn-success.answer
              .poll-count= @poll.answer_2

            .answer-3.btn.btn-info.answer
              .poll-count= @poll.answer_3

          #network
            %h4
          #secret-gift
            Join right now and get 
            %span 
              $10
            towards your first adventure

          %form{"accept-charset" => "UTF-8", action: "/users", method: "post", roll: "form", id: 'popup_join'}
            = tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token)

            = tag(:input, :type => "hidden", :name => 'user[category]', id: 'newsletter_category')

            %input.form-control{placeholder: "Email Address", type: "email", required: "required", name: "user[email]", id: "user_email", style: "border-radius: 4px 4px 0 0;"}
            %input.form-control{placeholder: "Password", type: "password", required: "required", autocomplete: "off", id: "user_password", name: "user[password]", style: "width: 80% !important;float: left !important;border-radius: 4px 0 0 4px;"}
            = tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, id: "user_password_confirmation", name: "user[password_confirmation]")


            %input.btn{name: "sign_up", type: "submit", value: "JOIN", id: 'email_list_button'}


