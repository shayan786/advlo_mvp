#feat_hosts
  .container
    - @feat_hosts.each do |host|
      .host_container
        .row
          .col-md-2.no_padding_right
            .host_image{style: "background: url('#{host.get_avatar_url("medium")}') center center no-repeat"}
          .col-md-5.text-center
            .host_tagline= "\"#{host.short_description}\""
            - host.get_host_adventure_categories.each do |cat|
              .host_category_circle= get_category_acronym(cat)
          .col-md-5
            .host_adventures.text-center
              - host.adventures.limit(6).each do |adv|
                .adv_box{style: "background: url('#{adv.attachment.url(:thumb)}') center center no-repeat"}

        .row
          .col-md-2.no_padding_right
            .host_name.text-center= host.get_first_name
          .col-md-8.no_padding_left.no_padding_right
            .host_location.text-center
              %i.fa.fa-map-marker
              = host.location
          .col-md-2.text-center.no_padding_left
            .btn.btn-primary.host_contact_btn
              %i.fa.fa-envelope-o
              CONTACT
          
