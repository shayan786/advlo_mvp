#adventure_slider
  .container
    %h1 FEATURED ADVENTURES
    %a.small_text{href: "#"} VIEW ALL >>>

  .slider-container
    - if @feat_adventures
      - @feat_adventures.each do |adv|
        .adventure-box
          .adventure-image= image_tag adv.attachment(:medium)
          %h3= adv.title
          %p= adv.subtitle

