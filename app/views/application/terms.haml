#terms
  .container
    .panel.panel-default
      %h3.panel-heading.text-center
        %ul.nav.nav-tabs{role: "tablist", id: "terms_nav"}
          %li.active
            %a{href: '#terms_of_service', role: "tab", "data-toggle"=>"tab"}
              Terms of Service
          %li
            %a{href: '#privacy_policy', role: "tab", "data-toggle"=>"tab"} 
              Privacy Policy
          %li
            %a{href: '#cancellation_refunds', role: "tab", "data-toggle"=>"tab"} 
              Cancellations & Refunds
              
      .panel-body
        .tab-content
          = render partial: "terms_of_service"
          = render partial: "privacy_policy"
          = render partial: "cancellation_refunds"


:javascript
  $('#terms_nav a').click(function (e) {
    e.preventDefault();
    $(this).tab('show');
  })

  $('.privacy-toggle').click(function(){
    $('#terms_nav a').last().tab('show');
  })

  