.homepage-photo
  .jumbotron.jumbotron_fix{style: "background: url('#{asset_path("background/twosurfers.jpeg")}') fixed bottom center no-repeat"}

.scroll-slow
  #homepage-text
    #banner-text 
      Find your adventure
    #explanation
      Discover unique travel experiences with local guides   


    .row
      #find_adventure_form
        .col-md-6.col-md-offset-3
          .form-group
            .input-group
              %input.form-control{placeholder: "Enter Destination", name: "location", id: "location", onfocus: "focusFunction()", onblur: "unfocusFunction()"}
              .input-group-addon
                %i.fa.fa-search

    - if notice
      .col-md-6.col-md-offset-3 
        .alert.alert-warning.text-center
          %button.close{"data-dismiss" => "alert", type: "button"}
            %span{"aria-hidden" => "true"} Ã—
            %span.sr-only Close
          = notice.html_safe

  .text-center.explanation-row
    #arrow-wrapper
      %a
        .bottom



:javascript
  if ($.cookie('referrer_id')) {
    homepage_new_user_set_referrer_id($.cookie('referrer_id'));
  }

  $('#arrow-wrapper').click(function(){
    $('html, body').animate({
       scrollTop: $("#how_it_works").offset().top + 5}, 800
    )
  })

  $(document).ready(function(){
    homepage_find_input_geocomplete();

    if( $('.navbar-fixed-top').is(":visible") ){
      $('.scroll-slow').css('top','75px');
      $('#arrow-wrapper').hide();
    }
  });

