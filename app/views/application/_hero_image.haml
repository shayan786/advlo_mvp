:javascript
  if($(window).width() < 700) {
    $('.jumbotron').after($('#how_it_works_panels'));
  }
  $(window).resize(function() {
    if ($(this).width() < 700){
      $('.jumbotron').after($('#how_it_works_panels'));
    }
    else if ($(this).width() > 700) {
      $('.jumbotron').append($('#how_it_works_panels'));
    }   
  })



