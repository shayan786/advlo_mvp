#member-modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "member-modal", "data-backdrop" => "static", role: "dialog"}
  .modal-dialog
    .modal-content
      .modal-body.text-center
        .advlo_img
          = image_tag 'logos/advlo_words_only.png'

        #network
          %p Join to access our global adventure travel marketplace

        .row
          %a.btn.btn-primary.fb_btn{href: "/users/auth/facebook"}
            %i.fa.fa-facebook
            FACEBOOK

        .text-center{style: "font-family: bebas_neue; font-size: 1.2em; margin: 10px 0"}
          OR

        %form{"accept-charset" => "UTF-8", action: "/users", method: "post", roll: "form", id: 'signup_modal'}
          =tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token)
          .form-group
            %input.form-control{placeholder: "Email Address", type: "email", required: "required", name: "user[email]", id: "user_email"}
          .form-group
            %input.form-control{placeholder: "Password", type: "password", required: "required", autocomplete: "off", id: "user_password", name: "user[password]"}
          .form-group
            %input.form-control{placeholder: "Confirm Password", type: "password", required: "required", autocomplete: "off", id: "user_password_confirmation", name: "user[password_confirmation]"}
          .row
            %input.btn.btn-primary.sign_up_btn{name: "sign_up", type: "submit", value: "SIGN UP"}

        .row
          .btn.btn-success.sign_up_toggle_btn
            EMAIL


        .back-text
          %a{href: '/', style: "color: #fff; opacity: 0.8; margin-left: 8px; margin-right: 8px;"} Homepage
          ='/'
          %a{href: '/adventures/info', style: "color: #fff; opacity: 0.8; margin-left: 8px; margin-right: 8px;"} Hosting Info
          ='/'
          %a{href: '/about', style: "color: #fff; opacity: 0.8; margin-left: 8px; margin-right: 8px;"} The Team
