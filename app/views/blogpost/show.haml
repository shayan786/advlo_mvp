.blog-show-wrapper
  .row
    .col.col-md-2#left-sidebar-container
      .left-wrapper
        #follow-title
          Follow
        .follow
          twitter
        .follow
          insta
        .follow
          facebook
        .follow
          google

    .col.col-md-8
      .post-wrapper
        .blog-title= @blogpost.title
        .blog-body
          = @blogpost.body.html_safe

           
      .share-block
        = render_shareable

      #disqus_thread
        :javascript
          /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
          var disqus_shortname = 'advlo'; // required: replace example with your forum shortname

          /* * * DON'T EDIT BELOW THIS LINE * * */
          (function() {
              var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();
        %noscript
          Please enable JavaScript to view the
          %a{:href => "http://disqus.com/?ref_noscript"} comments powered by Disqus.          

    .col.col-md-2#related-adventures-container
      #adventures-container
        - @related_adventures.each do |adv|
          %a{href: "/adventures/#{adv.slug}", target: '_blank'}
            .insta-post
              .photo
                %img{itemprop: 'image', src: adv.attachment.url(:thumb)}
              .title= "#{adv.title}.."
