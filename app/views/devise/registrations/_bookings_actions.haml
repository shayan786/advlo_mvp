%td.text-center
  - if reservation_type == "Upcoming"
    - if res.stripe_charge_id
      - options = "<div class= 'btn btn-danger' data-res-id = '#{res.id}' data-target = '#user_cancel_reservation_modal' data-toggle = 'modal' 'data-event-time= '#{res.event_start_time.strftime("%A - %m/%d/%Y - %l:%M %P")}' data-adventure-title= '#{res.adventure.title}' data-refund-amount = '#{res.get_refund_amount}'> Cancel </div> <div class= 'btn btn-info' data-target = '#contact_host_modal' data-toggle = 'modal'> Contact Host </div>"
    - else
      - options = "<div class= 'btn btn-info' data-target = '#contact_host_modal' data-toggle = 'modal'> Contact Host </div>"

  - if reservation_type == "Past"
    - review = Review.find_by_user_id(res.user_id)

    - if review
      - options = "<div class= 'btn btn-success' data-target = '#adventure_review_modal' data-toggle = 'modal'> Update Review </div> <div class= 'btn btn-info' data-target = '#contact_host_modal' data-toggle = 'modal'> Contact Host </div>"
    - else
      - options = "<div class= 'btn btn-success' data-target = '#adventure_review_modal' data-toggle = 'modal'> Leave Review </div> <div class= 'btn btn-info' data-target = '#contact_host_modal' data-toggle = 'modal'> Contact Host </div>"


  - if reservation_type == "Cancelled"
    - options = "<div class= 'btn btn-info' data-target = '#contact_host_modal' data-toggle = 'modal'> Contact Host </div>"




  %button.btn.btn-info.actions_btn{"data-toggle"=>"popover", "data-content"=>"#{options}", "data-placement" => "bottom", "data-container"=>"body"}
    %i.fa.fa-cog