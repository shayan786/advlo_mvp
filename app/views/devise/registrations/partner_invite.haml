- set_meta_tags(default_meta_tags)

#hostel_sign_up
  .container
    .panel.col-md-4.col-md-offset-4
      %h2.text-center Become a Partner Hostel
      .referrer_text.text-center
        You have been invited by:
        %em
          = @referrer.email
      %br
      .text-center
        Create your free account and have access to:
      .text-left
        %br
        ="- Sell your hostel's adventure activities"
        %br
        ="- Earn money by inviting local adventure guides"
        %br
        ="- Promote your hostel to a global network of travelers"



      .panel-body
        .d_error_msgs= devise_error_messages!
        %form{"accept-charset" => "UTF-8", action: "/users", method: "post", roll: "form"}
          %a.btn.btn-primary.fb_btn{href: "/users/auth/facebook?referrer_id=#{@referrer.id}"}
            %i.fa.fa-facebook
            Sign Up with Facebook
          =tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token)
          =tag(:input, :type => "hidden", :name => "user[referrer_id]", :value => @referrer.id)
          =tag(:input, :type => "hidden", :name => "user[is_guide]", :value => true)
          .form-group
            %input.form-control{placeholder: "Partner Email", type: "email", required: "required", name: "user[email]", id: "user_email"}
          .form-group
            %input.form-control{placeholder: "Password", type: "password", required: "required", autocomplete: "off", name: "user[password]"}
          .form-group
            %input.form-control{placeholder: "Confirm Password", type: "password", required: "required", autocomplete: "off", name: "user[password_confirmation]"}
          %input.btn.btn-primary.sign_up_btn{name: "sign_up", type: "submit", value: "Sign Up"}
