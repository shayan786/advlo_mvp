- set_meta_tags(default_meta_tags)

#d_user_dashboard
  .container
    .panel.panel-default
      = render partial: "dashboard_header"
      .panel-body
        #wallet
          %h2.text-center
            %ul.nav.nav-tabs
              %li
                %a{href: "/users/wallet"}
                  Bookings
              %li
                %a{href: "/users/reservations"}
                  Reservations
              %li
                %a{href: "/users/payouts"} 
                  Payouts
              %li.active
                %a{href: "/users/conversations"} 
                  Messages

        = render partial: "/adventure_steps/notice"

        #conversations
          .panel.panel-default
            %h4.panel-heading
              %ul.nav.nav-tabs
                %li.active
                  %a{href: "#"}
                    Inbox


            .panel-body
              - if current_user.conversations.count > 0
                %table.table.table-hover
                  %thead
                    %tr
                      %th From:
                      %th To:
                      %th Subject:
                      %th Date & Time:

                  %tbody
                    - current_user.conversations.each do |con|
                      - sender = User.find_by_id(con.sender_id)
                      - receiver = User.find_by_id(con.receiver_id)
                      %tr
                        %td= sender.email[0..sender.email.rindex('@')]+"..."
                        %td= receiver.email[0..receiver.email.rindex('@')]+"..."
                        %td= con.subject
                        %td= con.messages.last.created_at.strftime("%A  - %B %d - %l:%M %p")


              - else
                %h4.text-center
                  You do not currently have any messages!
                .text-center
                  %a.btn.btn-default.no_messages_btn{href: "/adventures"}
                    START EXPLORING
