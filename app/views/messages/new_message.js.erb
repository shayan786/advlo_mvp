// Find out which modal to modify
var modal_id = '#conversation_modal_<%= @conversation.id %>';

// Get the number of messages in that modal
var num_messages = '<%= @conversation.messages.count %>';

// Append the latest message to the modal
var message_body = '<%= @message.body %>'


var to_copy_panel_num = $(modal_id + " .message_panel").length-2;

var new_message_panel = $(modal_id+" .message_panel").last().clone();

new_message_panel.find('.panel-body').text(message_body);

new_message_panel.insertBefore($(modal_id + " .message_panel").last());


// Clear out the current form
$(modal_id + " #message_body ").val('');
