#p_banner
  .container
    .row
      .col-md-4.col-md-offset-4
        .panel.panel-default
          .panel-body.text-center
            - if @user && @user.avatar_url == '' || @user.avatar_url == nil
              .profile-image= image_tag @user.avatar.url(:large), class: 'non-fb-img'
            - elsif @user
              .profile-image= image_tag "#{@user.avatar_url}?type=large"

            .banner_name= @user.name
            .banner_subtitle= @user.short_description


#p_overview
  .container
    .row
      .col-md-9
        .panel.panel-default
          .panel-body
            .col-md-1
            .col-md-5
              %li.overview_item
                SEX
                %br
                %span= @user.sex
              %li.overview_item
                AGE
                %br
                %span= @user.get_age(@user.id)
              %li.overview_item 
                BASED IN 
                %br
                %span= @user.location
            .col-md-5
              %li.overview_item_header
                LANGUAGES:
                - @user_languages.each do |l|
                  .over_item_sub= l

              %li.overview_item_header
                CERTIFICATIONS:
                - @user_skillsets.each do |sk|
                  .over_item_sub= sk

            .col-md-1
      .col-md-3
        .panel.panel-default
          .panel-body
            .box_header.text-center 
              CONTACT
              
              %span= @user.name.upcase

            .box_header_line
            .text-center
              %a.btn.btn-primary.msg_btn{href: "#"}
                %i.fa.fa-envelope-o
                SEND MESSAGE
            .row.box_social.text-center
              .col-md-12

                - if !@user.fb_url.nil? && !@user.fb_url.empty?
                  %a{href: "http://#{@user.fb_url}", target: "_blank", style: "padding-right: 25px;"}
                    %i.fa.fa-facebook-square
                - if !@user.tw_url.nil? && !@user.tw_url.empty?
                  %a{href: "http://#{@user.tw_url}", target: "_blank", style: "padding-right: 25px;"}
                    %i.fa.fa-twitter-square
                - if !@user.li_url.nil? && !@user.li_url.empty?
                  %a{href: "http://#{@user.li_url}", target: "_blank"}
                    %i.fa.fa-linkedin-square

#p_my_adventures
  .container
    .my_adv_header 
      MY ADVENTURES
      %span.header_sub 
        %span= "( #{@user.adventures.count} )"
        

        - if @user.adventures.count >= 1
          .adventure-slider-container#user-adventure-slider
            .slider-wrapper
              %i.next.fa.fa-chevron-right#profile-next
              %i.prev.fa.fa-chevron-left#profile-prev

              .swiper-container
                .swiper-wrapper
                  - if @user.adventures
                    - @user.adventures.each_with_index do |adv, i|
                      %a.swiper-slide.adventure-slide{href: adventure_path(adv.slug)}
                        .image-wrapper{style: "background: url(#{adv.attachment.url(:large)}) no-repeat center center;"}
                          .copy
                            - if adv.title.length > 32
                              #title= "#{adv.title[0..32]}..."
                            -else
                              #title= adv.title

                            .ping
                            - if adv.subtitle.length > 37
                              .location= "#{adv.subtitle.upcase[0..37]}..."
                            -else
                              .location= adv.subtitle.upcase

                          .hover-block{id: i}
                            - if @user && @user.avatar_url == '' || @user.avatar_url == nil
                              .guide-profile-image= image_tag @user.avatar.url(:large)
                            - elsif @user
                              .guide-profile-image= image_tag "#{@user.avatar_url}?type=large"
                          .copy-container{class: "copy-#{i}"}

                          

        -else
          No adventures posted 
                


#p_bio
  .container
    .row
      .col-md-12
        .panel.panel-default
          .panel-body
            .bio_header
              THE BIO
            .bio_body
              - split_bio = @user.bio.split('.').first()
              - rest_of_bio = @user.bio.gsub(split_bio, '')
              %span= '"' + split_bio + '."'
              %br
              = rest_of_bio[1..-1]


#p_reviews
