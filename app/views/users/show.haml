            = render partial: "contact_host_modal", locals: {user: @user, res: nil}
            .panel-body
              .row
                .col-md-
                  .overview_header
                    ABOUT ME:
                  .overview_content{itemprop: 'potentialAction'}= @user.bio.gsub(/\n/, '<br/>').html_safe 

          - if @user.video_url
            .user-video-wrapper.text-center
              = raw(@user.embed(@user.video_url))

  - if @reviews.count > 0
    #p_reviews
      .container
        .row
          .col-md-12
            .review_header
              .text-center.nexa-light
                REVIEWS
              .copy-brick.container-fluid#reviews
                - @reviews.each do |review|
                  = render partial: '/shared/review_brick', locals: {review: review}
        

