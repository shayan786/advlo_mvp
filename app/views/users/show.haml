#p_banner
  .container
    .row
      .col-md-4.col-md-offset-4#profile-box
        .panel.panel-default
          .panel-body.text-center
            .profile-image= image_tag "#{@user.get_avatar_url("medium")}"
            .banner_name= @user.name
            .banner_subtitle= @user.short_description
            
            - if !@user.rating.nil? || !(@user.rating == '')
              %input{id: "user_rating_value", type: "hidden", "data-host-rating"=>@user.rating}
              %input{id: "user_rating_show"}

#p_overview
  .container
    .row
      .col-md-9
        .panel.panel-default
          .panel-body
            .col-md-1
            .col-md-5
              %li.overview_item
                SEX
                %br
                %span= @user.sex
              %li.overview_item
                AGE
                %br
                %span= @user.get_age
              %li.overview_item 
                BASED IN 
                %br
                %span= @user.location
            .col-md-5
              %li.overview_item_header
                LANGUAGES:
                - @user_languages.each do |l|
                  .over_item_sub= l

              %li.overview_item_header
                SKILLS / CERTIFICATIONS:
                - @user_skillsets.each do |sk|
                  .over_item_sub= sk

            .col-md-1
      .col-md-3
        .panel.panel-default
          .panel-body
            .box_header.text-center 
              CONTACT
              %br
              %span= @user.name.upcase

            .box_header_line
            .text-center
              %a.btn.btn-primary.msg_btn{href: "#", 'data-toggle' => "modal", 'data-target' => '#contact_host_modal'}
                %i.fa.fa-envelope-o
                SEND MESSAGE
            .row.box_social.text-center
              .col-md-12
                - if @user.fb_url && !(@user.fb_url == '')
                  / %a{href: "http://#{@user.fb_url}", target: "_blank", style: "padding-right: 25px;"}
                  %i.fa.fa-facebook-square{style: "padding-right: 25px;"}
                - if @user.tw_url && !(@user.fb_url == '')
                  / %a{href: "http://#{@user.tw_url}", target: "_blank", style: "padding-right: 25px;"}
                  %i.fa.fa-twitter-square{style: "padding-right: 25px;"}
                - if @user.li_url && !(@user.fb_url == '')
                  / %a{href: "http://#{@user.li_url}", target: "_blank"}
                  %i.fa.fa-linkedin-square

#p_my_adventures
  .container
    .my_adv_header 
      MY ADVENTURES
      %span.header_sub 
        %span= "( #{@user.adventures.count} )"

        - if @user.adventures.count >= 1
          .shared-slider-container#user-adventure-slider
            .slider-wrapper
              %i.next.fa.fa-chevron-right#profile-next
              %i.prev.fa.fa-chevron-left#profile-prev

              - if @user.adventures
                = render partial: '/shared/adventures_slider', locals: {slider_adventures: @user.adventures, user: @user }
              
        -else
          No adventures posted 

#p_bio
  .container
    .row
      .col-md-12
        .bio_header
          BIO
        .bio_body
          - split_bio = @user.bio.split('.').first()
          - rest_of_bio = @user.bio.gsub(split_bio, '')
          %span= '"' + split_bio + '."'
          %br
          = rest_of_bio[1..-1]

#p_reviews
  .container
    .row
      .col-md-12
        .review_header
          REVIEWS
          - if !@reviews.empty?
            .copy-brick.container-fluid#reviews
              - @reviews.each do |review|
                = render partial: '/shared/review_brick', locals: {review: review}
          - else 
            .no_reviews_text
              There are no reviews for this host yet.

= render partial: "contact_host_modal", locals: {user: @user}
        

