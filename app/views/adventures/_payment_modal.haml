#event-modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "event-modal", role: "dialog"}
  .modal-dialog
    .modal-content
      .modal-body
        - if @all_adventure_events.empty?
          .text-center
            %em.tab_header
              Instant Reservations
            .no_ib_text
              There are no instant reservations for this adventure. 
              %br
              Try requesting one!

        - else
          .upcoming
            .row.text-center
              %em.tab_header
                Instant Reservations
            - @all_adventure_events.each do |event| 
              
              = render partial: 'event_partial', locals: {event: event}

                
      .modal-footer
        .row.text-center
          %em.tab_header
            Request a Reservation
        = render partial: 'request_time_form', locals: {adventure: @adventure}


#reservations-request-modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "reservations-request-modal", role: "dialog"}
  .modal-dialog.payment-modal-wrapper
    .modal-content
      .modal-body
        - if current_user && @current_guide
          = render partial: "/reservations/request", locals: {reservation: @reservation}
        - else 
          .row
            .adventure-login-title= @adventure.title
            .sign-in-toggle.btn-success.button-style
              SIGN IN
            .sign-in.mid-purchase.sign-in-form
              = render file: 'users/sign_in', locals: {adventure: @adventure}

            .sign-up-toggle.btn-success.button-style
              SIGN UP
            .sign-up.mid-purchase.sign-up-form
              = render file: 'users/sign_up', locals: {adventure: @adventure}

:javascript

  $('.sign-in-toggle').click(function(){
    $(this).hide()
    $('.sign-in-form').fadeIn()
  })
  $('.sign-up-toggle').click(function(){
    $(this).hide()
    $('.sign-up-form').fadeIn()
  })

  $('.sign-in-form')


