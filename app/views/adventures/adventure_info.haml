- render partial: 'info_seo_tags'

#adventure_info.business_page

  - image = @hero_image ? @hero_image.attachment.url(:hero) : "background/advlo_surfers2.jpg"
  .jumbotron{:style => "background-image: url(#{image_path image})"}
    .container
      .row.text-center
        .col-md-8.host_info_text.col-md-offset-2
          Connect with travelers, promote your trips, and sell the adventures you create
          

  
  .row
    .guide-button.left-local
    .green-button.right-business.green

  .row
    .col-md-12.tab-row
      
      %ul.nav.nav-tabs{role: "tablist"}
        %li#individual
          %a{href: '#individual-info', role: "tab", "data-toggle"=>"tab"}
            .title I am an Individual Guide:
            .explanation You have passion for adventure and sharing it with others.
        %li#business
          %a{href: '#business-info', role: "tab", "data-toggle"=>"tab"} 
            .title I am a Local Business:
            .explanation You have a local adventure operation that values cultural connection.

            

  .adventure_info_body

    #individual-info
      = render partial: 'info_page', locals: {type: 'local'}
    #business-info      
      = render partial: 'info_page', locals: {type: 'business'}


:javascript
  $('#individual').click(function(){
    $('#individual-info').fadeIn();
    $('#business-info').hide();
    infoSlider('local');
  })

  $('#business').click(function(){
    $('#business-info').fadeIn();
    $('#individual-info').hide();  
    infoSlider('business');
  })

