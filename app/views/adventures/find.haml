#find
  .search_options
    .row
      .col-md-3.col-md-offset-2
        .btn.btn-primary.where_to_btn.orange_btn.active
          WHERE TO?
      .col-md-2.text-center
        .or
          OR
      .col-md-3
        .btn.btn-primary.which_adventure_btn.orange_btn
          WHICH ADVENTURE?

    .row
      %form{"accept-charset" => "UTF-8", action: "/find/location", method: "post", roll: "form", id: "find_adventure_form", "data-remote" => "true"}
        =tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token)

        .col-md-6.col-md-offset-3
          .form-group
            .input-group
              .input-group-addon
                %i.fa.fa-search
              %input.form-control{placeholder: "Enter Location", name: "location", id: "location"}

  .search_results.dark_background
    .header.text-center
      RESULTS
    .row
      .col-md-8.col-md-offset-2
        .begin_search.text-center
          BEGIN YOUR SEARCH ABOVE


    .adventure-container
      #adventure-partial

    .row
      .col-md-8.col-md-offset-2
        .no_results.text-center
          SORRY, NO ADVENTURES WERE FOUND IN
          .location


