    .row
      .col-md-3#mobile-adventure-infographic
        .navigation-brick
          .guide-block.col-sm-6
            #guide-name
              = "Gustavo -"
              %span= "Climbing Guru"
            #guide-profile-image
              = image_tag "#{current_user.avatar_url}?type=large" if current_user && current_user.avatar_url
      

          .adventure-block.col-sm-6
            #adventure-price
              %span $60
            #book-it-bro
              %span BOOK IT

    .col-md-9.information-container
      #adventure-title= @adventure.title
      #adventure-description future description ... goes here
      - attributes.each_with_index do |(key, array), i|
        - case i
        - when 0
          - id ='overview'
        - when 1
          - id ='itinerary'
        - when 2
          - id ='reviews'
        - when 3
          - id ='policy'
        .copy-brick.container-fluid{id: id}
          .ping
          .brick-title= key
          .brick-copy= array

    .col-md-3#desktop-adventure-nav
      .navigation-brick
        %a{href: '#overview'}
          .item
            %span 
              overview
        %a{href: '#itinerary'}
          .item
            %span itinerary
        %a{href: '#reviews'}
          .item
            %span reviews
        %a{href: '#policy'}
          .item
            %span policy


:javascript
  $(document).ready(function() {

    if($(window).height() < 705){
      $('.navigation-brick').last().hide()
    }

    $('a[href*=#]:not([href=#])').click(function() {
      if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'') && location.hostname == this.hostname) {
        var target = $(this.hash);
        target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
        if (target.length) {
          $('html,body').animate({
            scrollTop: target.offset().top-77
          }, 1000);
          return false;
        }
      }
    });
  });
