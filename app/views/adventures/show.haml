.adventure-show-container.col-md-12
  #main_image.img-responsive= image_tag @adventure.attachment.url(:large)

  .col-md-3.adventure-show-infographic
    -if @current_guide
      .guide-block
        #guide-name
          = @current_guide.name
        #guide-profile-image
          -if @current_guide.avatar_url
            = link_to (image_tag "#{@current_guide.avatar_url}?type=large"), user_path(@current_guide)
          - else
            = link_to (image_tag @current_guide.avatar.url(:large)), user_path(@current_guide)
        #guide-title
          = @current_guide.short_description


    - else
      .guide-block
        #guide-name
          Want to guide?
        #guide-profile-image
          = link_to "Click here", '/adventures/create_prefill'

      

    .adventure-block
      #adventure-title

      #adventure-price
        %span $60
      #book-it-bro
        %span BOOK IT

  .adventure-copy-wrapper
    .row
      .col-md-3#mobile-adventure-infographic
        .navigation-brick
          .guide-block.col-sm-6
            #guide-name
              = "Gustavo -"
              %span= "Climbing Guru"
            #guide-profile-image
              = image_tag "#{current_user.avatar_url}?type=large" if current_user && current_user.avatar_url
      

          .adventure-block.col-sm-6
            #adventure-price
              %span $60
            #book-it-bro
              %span BOOK IT

    .col-md-9.information-container
      #adventure-title= @adventure.title
      #adventure-description= @adventure.subtitle
      .copy-brick.container-fluid
        .ping
        .brick-title Overview
        .brick-copy= @adventure.inspect

      .copy-brick.container-fluid
        .ping
        .brick-title Itinerary
        .brick-copy 
          - if @itineraries
            - @itineraries.each do |itin|
              .itinerary-block
                .headline= itin.headline
                .description= itin.description

      .copy-brick.container-fluid
        .ping
        .brick-title Gallery
        .brick-copy 
          #gallery-masonry-container
            - @adventure.adventure_gallery_images.each_with_index do |gi, i|
              .gallery-image{"data-target" => "#myModal", "data-toggle" => "modal", "data-image" => gi.picture.url(:large), id: "image#{i}"}
                = image_tag gi.picture.url(:thumb)

      #myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog"}
        .modal-dialog
          .modal-content
            .modal-body
              %img{src: '', id: ''}
            // .modal-footer
            /   / %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} prev
            /   / %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} next
                
          
      .copy-brick.container-fluid
        .ping
        .brick-title Policy
        .brick-copy overview textoverview textoverview textoverview textoverview textoverview textoverview textoverview textoverview textoverview textoverview textoverview textoverview textoverview textoverview text

      .copy-brick.container-fluid
        .ping
        .brick-title Reviews
        .brick-copy overview textoverview textoverview textoverview textoverview textoverview textoverview textoverview textoverview textoverview textoverview textoverview textoverview textoverview textoverview text

    .col-md-3#desktop-adventure-nav
      .navigation-brick
        %a{href: '#overview'}
          .item
            %span 
              overview
        %a{href: '#itinerary'}
          .item
            %span itinerary
        %a{href: '#reviews'}
          .item
            %span reviews
        %a{href: '#policy'}
          .item
            %span policy

    

