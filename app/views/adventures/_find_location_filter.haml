.location_filter
  .row
    .container
      .col-md-2.text-center
        .row
          .filter_header
            Price
        .row
          .btn.btn-default.filter_select_btn.price_desc
            %i.fa.fa-arrow-down
          .btn.btn-default.filter_select_btn.price_asc
            %i.fa.fa-arrow-up

      .col-md-2.text-center
        .row
          .filter_header
            Price Type
        .row
          .btn.btn-default.filter_select_btn.price_type_ind
            Ind.
          .btn.btn-default.filter_select_btn.price_type_group
            Group

      .col-md-8.text-center
        .row
          .filter_header
            Category
        .row
          - if filter_categories
            .btn.btn-default.filter_select_btn.cat_btn.cat_all.active
              All
            - filter_categories.each do |cat|
              .btn.btn-default.filter_select_btn.cat_btn{"data-category" => "#{cat.downcase}"}
                = cat.capitalize
          - else
            - @categories.each do |cat|
              .btn.btn-default.filter_select_btn.cat_btn.disabled.active{"data-category" => "#{cat.downcase}"}
                = cat.capitalize

