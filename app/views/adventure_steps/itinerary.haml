#adventure_create
  .container
    = render partial: "/adventures/adv_create_header"
    #adv_itinerary
      .panel.panel-default
        .panel-heading.text-center.section_header
          ITINERARY
        .panel-body
          - if notice
            .col-md-6.col-md-offset-3.text-center
              .update_notice.alert.alert-warning
                = notice
          - if @adventure.itineraries.empty?
            .col-md-6.col-md-offset-3
              .well.how_to
                Although optional, highly recommended to add adventure event items to define the timeline or activities of your adventure! Every item will give more information to the adventure seekers.
            = render partial: "itinerary_form_new"
          - else
            = render partial: "itinerary_form_update"
        .panel-footer.text-center
          %a.btn.btn-primary.preview_btn{href: "/adventure_steps/schedule?adventure_id=#{@adventure.id}"}
            NEXT
         

:javascript
  adventureCreate();