#adventure_create
  .container
    = render partial: "/adventures/adv_create_header"
    #adv_itinerary
      %form{"accept-charset" => "UTF-8", action: wizard_path, method: "POST", id: "adventure_edit_form"}
        = tag(:input, :type => "hidden", :value => "put", :name => "_method")
        = tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token)
      .panel.panel-default
        .panel-heading.text-center.section_header
          ITINERARY
        .panel-body
          - if @adventure.itineraries.empty?
            .form-group.row
              .col-md-4
                .form_label.text-right Event Title *
              .col-md-6
                %input.form-control.show_ml{type: "text", required: "required", name: "itinerary[headline]", id: "iten_headline", maxlength: "40", :data => {:container => "body", :toggle => "popover", :placement => "right", :content => "Ex: Pick up surfboard at Seal Beach surfboard rental shop"}}
            .form-group.row
              .col-md-4
                .form_label.text-right Description *
              .col-md-6
                %textarea.form-control.show_ml{rows: "6", type: "text", required: "required", name: "itinerary[description]", id: "iten_description", maxlength: "250", :data => {:container => "body", :toggle => "popover", :placement => "right", :content => "Description of the first event in the itinerary"}}
            .text-center
              .btn.btn-primary.add_event_btn
                %i.fa.fa-plus-circle
                ADD EVENT

          - else 


          

        .panel-footer.text-center
          %input.btn.btn-primary.preview_btn{name: "commit", type: "submit", value: "NEXT"}
                
:javascript
  adventureCreate();
