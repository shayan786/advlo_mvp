  #contact_form_modal.modal.fade{role: "dialog"}
    .modal-dialog
      .modal-content
        .modal-header.text-center
          Contact Advlo
        .modal-body
          %form{"accept-charset" => "UTF-8", action: "/contact", method: "POST", id: "contact_form", "data-remote" => "true"}
            = tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token)
            - if current_user
              = tag(:input, :type => "hidden", :name => "contact[user_id]", :value => current_user.id)
            .form-group.row
              .col-md-4 
                .form_label.text-right Email *
              .col-md-6
                %input.form-control{type: "text", name: "contact[email]", id: "contact_email"}
            .form-group.row
              .col-md-4 
                .form_label.text-right Comments / Question *
              .col-md-6
                %textarea.form-control{rows: "7", type: "text", name: "contact[comments]", id: "contact_comments"}
            .row.text-center
              .btn.btn-primary.contact_btn
                SUBMIT
          #contact_submitted
            .row.text-center
              .col-md-10.col-md-offset-1
                %i.fa.fa-envelope-o
                %br
                Thanks for reaching out to us.
                %br
                We will get back to you as soon as we can!

:javascript
  $('#contact_form .contact_btn').click(function() {
    var email_l = $.trim($(#contact_form #contact_email).val());
    var comm_l = $.trim($(#contact_form #contact_comments).val());
    
    if (email_l.length > 5 && comm_l.length > 5) {
      $('#contact_form').submit();
    }
  })
              
