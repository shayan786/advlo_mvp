#footer
  .container.text-center
    .footer_text
      .col-md-3
        %a{href:"http://www.facebook.com/advlo", target: "_blank"}
          %i.fa.fa-facebook
        %a{href:"http://www.twitter.com/advlo_", target: "_blank"}
          %i.fa.fa-twitter
        %a{href:"http://www.instagram.com/advlo", target: "_blank"}
          %i.fa.fa-instagram
        %a{href:"http://plus.google.com/+Advlo-Adventure-Local", target: "_blank"}
          %i.fa.fa-google-plus
      .col-md-1
      .col-md-4
        %a{href: "#", 'data-toggle' => "modal", 'data-target' => '#contact_form_modal'}
          CONTACT US
        .dash= " - " 
        %a{href: "http://blog.advlo.com/", target: "_blank"}
          BLOG
        .dash= " - " 
        %a{href: "/terms"}
          TERMS & PRIVACY
        .dash= " - " 
        %a{href: "/about"}
          TEAM

  - unless current_user
    #signup-please-modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "signup-please-modal", role: "dialog"}
      .modal-dialog
        .modal-content
          %button.close#close-signup-modal
            %span Ã—
            %span.sr-only Close

          .modal-body.text-center
            .advlo_img
              = image_tag 'logos/advlo_header_logo_closed.png'
            #network
              %h4 Find or Host the best adventures.
              %h4 Sign up for your free membership.
            .row
              %a.btn.btn-primary.fb_btn{href: "/users/auth/facebook"}
                %i.fa.fa-facebook
                CONNECT WITH FACEBOOK

            %hr

            %form{"accept-charset" => "UTF-8", action: "/users", method: "post", roll: "form", id: 'signup_modal'}
              =tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token)
              .form-group
                %input.form-control{placeholder: "Email Address", type: "email", required: "required", name: "user[email]", id: "user_email"}
              .form-group
                %input.form-control{placeholder: "Password", type: "password", required: "required", autocomplete: "off", id: "user_password", name: "user[password]"}
              .form-group
                %input.form-control{placeholder: "Confirm Password", type: "password", required: "required", autocomplete: "off", id: "user_password_confirmation", name: "user[password_confirmation]"}
              .row
                %input.btn.btn-primary.sign_up_btn{name: "sign_up", type: "submit", value: "SIGN UP"}

            .row
              .btn.btn-success.sign_up_toggle_btn
                CONNECT WITH EMAIL


  #contact_form_modal.modal.fade{role: "dialog"}
    .modal-dialog
      .modal-content
        .modal-header.text-center
          Contact Advlo
        .modal-body
          %form{"accept-charset" => "UTF-8", action: "/contact", method: "POST", id: "contact_form", "data-remote" => "true"}
            = tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token)
            - if current_user
              = tag(:input, :type => "hidden", :name => "contact[user_id]", :value => current_user.id)

            .form-group.row
              .col-md-4 
                .form_label.text-right Email *
              .col-md-6
                %input.form-control{type: "text", name: "contact[email]", id: "contact_email", class: "email-field", value: current_user ? current_user.email : ''}

            .form-group.row
              .col-md-4 
                .form_label.text-right Comments / Question *
              .col-md-6
                %textarea.form-control{rows: "7", type: "text", name: "contact[comments]", id: "contact_comments"}
            #honeypot
              %input.form-control{type: "text", name: "honeypot", id: "honeypot", placeholder: 'This field is like a captcha for bots.. Do not fill in.'}
              
            .row.text-center
              .btn.btn-primary.contact_btn
                SUBMIT


          #contact_submitted
            .row.text-center
              .col-md-10.col-md-offset-1
                %i.fa.fa-envelope-o
                %p{style: 'font-size: 20px;'}
                  %br
                  Thanks for reaching out to us.
                  %br
                  We will get back to you as soon as we can!

:javascript
  $('#contact_form .contact_btn').click(function() {
    if($('#honeypot input').val() == ''){
      $('#contact_form').submit();
    } else {
      location.reload();
    }
  })

  $('#signup-please-modal .sign_up_toggle_btn').click(function(){
    $('#signup-please-modal #signup_modal').fadeIn();
    $(this).hide();
  })
