%html
  %head
    %meta{content: "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Adventure Local

    :css
      #header {
        height: 65px;
        padding: 30px;
        background: url(http://www.advlo.com/assets/cartographer_small-fc921f98c10167b7c55cb2de8357be54.png);
      }

      #header-links {
        position: relative;
        float: left; 
        width: 100%; 
      }

      .header-link {
        position: relative;
        float: left;
        font-size: 1.2em;
        border-radius: 3px;
        margin-right: 15px;
        margin-left: 15px;
        color: #000;
        width: 170px;
        margin-top: 25px;
        height: 25px;
        background-color: #333333;
        text-align: center;
        text-decoration: none;
        letter-spacing: 2px;
        opacity: 0.85;
        padding-top: 10px; 
        color: #E6E6E6; 
        font-family: Helvetica Neue; 
        font-size: 13px;
      }
    

      html {
        background: url(http://www.advlo.com/assets/cartographer_small-fc921f98c10167b7c55cb2de8357be54.png);
        // background: #151515;
      }

      body, td {
        color: #000000;
        font-size: 14px;
        font-family: Arial;
      }
      #main {
        background: #fff;
      }

      .divider {
        height: 2px;
      }

      .divider-border {
        border-bottom: 1px solid #555555;
      }

      .divider-high {
        margin-top: 5px;
        margin-bottom: 5px;
        border-bottom: 1px solid #555555;
      }

      .indented {
        width: 75%;
        margin: 0 auto;
        line-height: 21px;
      }

      .embed_btn {
        font-family: Verdana;
        padding: 10px 15px;
        font-size: 1.0em;
        background-color: #C35B26;
        border-radius: 5px;
        border-color: #C35B26;
        color: #FFF;
        width: 70px;
        text-decoration: none;
      }

      h1 {
        font-family: Verdana;
        color: #000;
        font-size: 1.5em;
      }
      span {
        font-size: 13px;
      }

      h3 {
        position: relative;
        top: 7px;
      }

      .center {
        text-align: center;
      }

      #footer {
        font-size: 11px;
        color: #fff;
      }
      #footer a {
        color: #fff;
      }

      #footer {
        height: 65px;
        padding: 30px;
        background: url(http://www.advlo.com/assets/cartographer_small-fc921f98c10167b7c55cb2de8357be54.png)
      }

      #footer p {
        font-family: Verdana;
        font-size: 13px;
      }

      .logo {
        text-align: center;
        position: relative;
      }
      .logo img {
        max-height: 60px;
        width: 175px;
        margin: 0 auto;
      }

      .text-left {
        text-align: left;
      }
      .text-center {
        text-align: center;
      }


  %body
    %table#background{border: "0", cellpadding: "0", cellspacing: "0", width: "100%"}
      %tr
        %td{align: "center", valign: "top"}
          %table#main{border: "0", cellpadding: "0", cellspacing: "20", width: "700"}

            // header
            %tr
              %td#header{colspan: "2"}
                %a{href: "http://www.advlo.com/"}
                  .logo= image_tag "http://www.advlo.com/assets/logos/small-logo-881ef082bb68e518782d89e7ecd26231.png"


                #header-links
                  %a{href: "#{root_url}adventures"}
                    .header-link
                      ADVENTURE
                  %a{href: "#{root_url}adventures/info"}
                    .header-link
                      HOST
                  %a{href: "#{root_url}travel-fund"}
                    .header-link
                      EARN $25

              // content      
              %tr
                %td
                  = yield

            // footer
            %tr
              %td#footer{align: "center", colspan: "2"}
                %p
                  = "Â© #{Time.now.year} Advlo inc."              
                  %br
                  %br
                  %a{href: "http://www.facebook.com/advlo"}
                    %img{src: "http://www.advlo.com/assets/facebook-a86fadd25f4c8740a8f04d3e3f16165f.png", style: 'width="50" height="50"'}
                  %a{href: "http://www.twitter.com/advlo_"}
                    %img{src: "http://www.advlo.com/assets/twitter-f6d1be7d910ca451e4bcd6af6a8768a1.png", style: 'width="50" height="50"'}
                  %a{href: "https://plus.google.com/+Advlo-Adventure-Local"}
                    %img{src: "http://www.advlo.com/assets/googleplus-86a88bcd8157cc81833d73453802381d.png", style: 'width="50" height="50"'}
                  %a{href: "http://www.instagram.com/advlo"}
                    %img{src: "http://www.advlo.com/assets/instagram-a68ff616afe63c1079707d70593186d5.png", style: 'width="50" height="50"'}

