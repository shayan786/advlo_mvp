%html
  %head
    %meta{content: "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Adventure Local

    :css
      #header {
        height: 65px;
        padding: 30px;
        background: url(http://www.advlo.com/assets/cartographer_small-fc921f98c10167b7c55cb2de8357be54.png);
      }

      html {
        background-color: whitesmoke;
        // background: #151515;
      }

      body, td {
        color: #000000;
        font-size: 14px;
        font-family: Arial;
      }
      #main {
        background: #fff;
      }

      .divider {
        height: 2px;
      }

      .divider-border {
        border-bottom: 1px solid #555555;
      }

      .divider-high {
        margin-top: 5px;
        margin-bottom: 5px;
        border-bottom: 1px solid #555555;
      }

      .indented {
        width: 75%;
        margin: 0 auto;
        line-height: 21px;
      }

      .embed_btn {
        font-family: Verdana;
        padding: 10px 15px;
        font-size: 1.0em;
        background-color: #C35B26;
        border-radius: 5px;
        border-color: #C35B26;
        color: #FFF;
        width: 70px;
        text-decoration: none;
      }

      h1 {
        font-family: Verdana;
        color: #000;
        font-size: 1.5em;
      }
      span {
        font-size: 13px;
      }

      h3 {
        position: relative;
        top: 7px;
      }

      .center {
        text-align: center;
      }

      #footer {
        font-size: 11px;
        color: #fff;
      }
      #footer a {
        color: #fff;
      }

      #footer {
        height: 65px;
        padding: 30px;
        background: url(http://www.advlo.com/assets/cartographer_small-fc921f98c10167b7c55cb2de8357be54.png)
      }

      #footer p {
        font-family: Verdana;
        font-size: 13px;
      }

      .logo {
        text-align: center;
        position: relative;
      }
      .logo img {
        max-height: 80px;
        width: 250px;
        margin: 0 auto;
      }

      .text-left {
        text-align: left;
      }
      .text-center {
        text-align: center;
      }

      .region-wrapper {
        position: relative;
        float: left; 
        width: 100%;
      }
      .others_region {
        width: 100%;
        float: left
      }
      .region { 
        position: relative;
        width: 50%;
        float: left;
        height: 150px;
        overflow: hidden;
      }
      .region img {
        width: 100%;
      }
      .region-text {
        position: absolute;
        width: 100%;
        text-align: center;
        bottom: 0px;
        color: #fff;
        height: 24px;
        padding-top: 10px;
        background: rgba(0,0,0,0.5);
      }

      .others_region {
        width: 100%;
        float: left;
        background: url('http://www.advlo.com/assets/background/other_regions_image-5cb8f477f3cc6b23559f96a83dec54a4.jpg') no-repeat;
        height: 150px;
        background-size: 100%;
      }
      .travel-safe {
        margin-top: 30px;
        position: relative;
        float: left;
        width: 100%;
        text-align: center;
      }


  %body
    %table#background{border: "0", cellpadding: "0", cellspacing: "0", width: "100%"}
      %tr
        %td{align: "center", valign: "top"}
          %table#main{border: "0", cellpadding: "0", cellspacing: "20", width: "700"}

            // header
            %tr
              %td#header{colspan: "2"}
                %a{href: "http://www.advlo.com/"}
                  .logo= image_tag "http://www.advlo.com/assets/logos/small-logo-881ef082bb68e518782d89e7ecd26231.png", alt: "Adventure with Locals"


              // content      
              %tr
                %td
                  = yield

            // footer
