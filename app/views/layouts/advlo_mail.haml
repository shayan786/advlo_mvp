%html
  %head
    %meta{content: "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Adventure Local

    :css

      #header {
        height: 65px;
        padding: 30px;
        background: url(http://beta.advlo.com/assets/cartographer_small-fc921f98c10167b7c55cb2de8357be54.png)

      }

      html {

      }

      body, td {
        color: #000000;
        font-size: 14px;
        font-family: Arial;
      }
      #main {
        background: #fff;
      }

      .divider {
        height: 2px;
      }

      .indented {
        width: 75%;
        margin: 0 auto;
        line-height: 21px;
      }

      h1 {
        font-family: Verdana;
        color: #000;
        font-size: 2.5em;
      }

      h3 {
        text-align: center;
        position: relative;
        top: 7px;
      }

      .center {
        text-align: center;
      }

      #footer {
        font-size: 11px;
        color: #fff;
      }
      #footer a {
        color: #fff;
      }

      #footer {
        height: 65px;
        padding: 30px;
        background: url(http://beta.advlo.com/assets/cartographer_small-fc921f98c10167b7c55cb2de8357be54.png)
      }

      #footer p {
        font-family: Verdana;
        font-size: 13px;
      }

      .logo {
        text-align: center;
        position: relative;
        height: 60px;
      }
      .logo img {
        height: 100%;
        width: auto;
      }

      #social-icons {
        width: 200px;
        margin: 0 auto;
        position: relative;
      }

      #social-icons .icon {
        display: inline;
        margin-left: 5px;
        margin-right: 5px;
      }
  
  %body
