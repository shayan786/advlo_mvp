%html
  %head
    %meta{content: "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Adventure Local

    :css
      #header {
        height: 65px;
        padding: 30px;
        background: asset_url(/assets/cartographer_small.png)
      }

      html {
        background-color: whitesmoke;
      }

      body, td {
        color: #000000;
        font-size: 14px;
        font-family: Arial;
      }
      #main {
        background: #fff;
      }

      .divider {
        height: 2px;
      }

      .divider-border {
        border-bottom: 1px solid #555555;
      }

      .indented {
        width: 75%;
        margin: 0 auto;
        line-height: 21px;
      }

      .respond_btn {
        font-family: Verdana;
        padding: 10px 15px;
        font-size: 1.0em;
        background-color: #C35B26;
        border-radius: 5px;
        border-color: #C35B26;
        color: #FFF;
        width: 70px;
        text-decoration: none;
      }

      .embed_btn {
        font-family: Verdana;
        padding: 10px 15px;
        font-size: 1.0em;
        background-color: #C35B26;
        border-radius: 5px;
        border-color: #C35B26;
        color: #FFF;
        width: 70px;
        text-decoration: none;
      }

      h1 {
        font-family: Verdana;
        color: #000;
        font-size: 1.5em;
      }
      span {
        font-size: 13px;
      }

      h3 {
        position: relative;
        top: 7px;
      }

      .center {
        text-align: center;
      }

      #footer {
        font-size: 11px;
        color: #fff;
      }
      #footer a {
        color: #fff;
      }

      #footer {
        height: 65px;
        padding: 30px;
        background: asset_url(/assets/cartographer_small.png)
      }

      #footer p {
        font-family: Verdana;
        font-size: 13px;
      }

      .logo {
        text-align: center;
        position: relative;
      }
      .logo img {
        max-height: 100px;
        width: 175px;
      }

      .text-left {
        text-align: left;
      }
      .text-center {
        text-align: center;
      }


  %body
    %table#background{border: "0", cellpadding: "0", cellspacing: "0", width: "100%"}
      %tr
        %td{align: "center", valign: "top"}
          %table#main{border: "0", cellpadding: "0", cellspacing: "20", width: "700"}

            // header
            %tr
              %td#header{colspan: "2"}
                %a{href: "http://www.advlo.com/"}
                  .logo= image_tag(asset_url(image_path('logos/small-logo.png')), atl: "")

              // content      
              %tr
                %td
                  = yield

            // footer
            %tr
              %td#footer{align: "center", colspan: "2"}
                %p
                  = "Â© #{Time.now.year} Advlo inc."              
                  %br
                  %br
                  %a{href: "http://www.facebook.com/advlo"}
                    %img{src: "#{image_path(asset_url('facebook.png'))}", style: 'width="50" height="50"'}
                  %a{href: "http://www.twitter.com/advlo_"}
                    %img{src: "#{image_path(asset_url('twitter.png'))}", style: 'width="50" height="50"'}
                  %a{href: "https://plus.google.com/+Advlo-Adventure-Local"}
                    %img{src: "#{image_path(asset_url('googleplus.png'))}", style: 'width="50" height="50"'}
                  %a{href: "http://www.instagram.com/advlo"}
                    %img{src: "#{image_path(asset_url('instagram.png'))}", style: 'width="50" height="50"'}
