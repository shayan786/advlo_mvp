!!!
%html
  %head
    %meta{content: 'width=device-width, initial-scale=1.0', name: 'viewport'}
    = display_meta_tags
    = favicon_link_tag 'advlo_favicon.ico'  
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag 'https://js.stripe.com/v1/'
    = javascript_include_tag 'http://maps.googleapis.com/maps/api/js?libraries=places&sensor=false'
    = javascript_include_tag 'http://google-maps-utility-library-v3.googlecode.com/svn/trunk/maplabel/src/maplabel.js'
    = tag :meta, :name => 'stripe-key', :content => Rails.configuration.stripe[:publishable_key]
    = csrf_meta_tags

    - if Rails.env.production?
      - if content_for? :for_head
        - yield :for_head

      = render partial: 'shared/google_analytics'

  %body
    #wrapper
      #loader-overlay
        #loader-spinner
        
      = render partial: 'shared/header'
      = yield

    = render partial: 'shared/footer'


    - if Rails.env.production?
      :javascript 
        $(document).ready(function(){
          homepageGoogleTracking();
          footerGoogleTracking();
        })

%noscript
  #loader-overlay{style: "display: none !important;"}

:javascript
  // we need a callback url for FB
  $(document).ready(function(e) {
    if (window.location.hash && window.location.hash == '#_=_') { 
      window.location.hash = ''
    }

